{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", 
                "${file}", 
                "${workspaceFolder}",
                "all",
                "-o", 
                "${fileBasenameNoExtension}.exe",
                "-fexec-charset=GBK",//解决中文乱码
                "-lwsock32"  //正常编译是无此链接的
            ]
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared", 
        "showReuseMessage": true,
        "clear": false
    }
}